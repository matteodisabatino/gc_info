{
  "git": {
    "commit": true,
    "push": true,
    "tag": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "tagName": "v${version}"
    }
  }
}